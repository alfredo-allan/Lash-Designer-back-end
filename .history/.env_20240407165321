import os
from dotenv import load_dotenv


# Carrega as variáveis de ambiente do arquivo .env específico para o ambiente de testes
load_dotenv(dotenv_path='tests.env')

DB_HOST = os.getenv("DB_HOST")
DB_USER = os.getenv("DB_USER")
DB_PASSWORD = os.getenv("DB_PASSWORD")
API_KEY = os.getenv("API_KEY")

# Agora você pode acessar as variáveis de ambiente definidas no arquivo .env
SECRET_KEY = os.getenv('SECRET_KEY')
DATABASE_URI = os.getenv('DATABASE_URI')

# Restante do código de teste aqui...
